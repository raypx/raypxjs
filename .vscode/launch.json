{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 Dev: Web App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": ["--filter", "@raypx/web", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "🚀 Dev: Docs",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": ["--filter", "docs", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "🧪 Test: All",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": ["test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "🗄️ DB: Studio",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": ["--filter", "@raypx/db", "studio"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "🏗️ Build: Web",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": ["--filter", "@raypx/web", "build"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "🔍 Debug: Next.js Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/web/node_modules/.bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/apps/web",
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "port": 9229
    }
  ]
}
