{
  "name": "raypx",
  "version": "0.0.0",
  "private": true,
  "description": "A modern web application built with Next.js and TypeScript",
  "homepage": "https://raypx.com",
  "bugs": {
    "url": "https://github.com/raypx/raypx/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raypx/raypx.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Raypx",
    "email": "support@raypx.com"
  },
  "scripts": {
    "build": "turbo build",
    "changeset": "changeset",
    "check": "biome check",
    "clean": "raypx-scripts clean",
    "coverage": "vitest --coverage",
    "dev": "turbo dev",
    "web:dev": "pnpm --filter web run dev",
    "format": "raypx-scripts format",
    "knip": "pnpm with-env knip || true",
    "knip:strict": "pnpm with-env knip",
    "knip:fix": "pnpm with-env knip --fix || true",
    "with-env": "dotenv -e ./.env --",
    "typecheck": "turbo typecheck --affected --cache-dir=.turbo",
    "postinstall": "raypx-scripts postinstall",
    "setup": "raypx-scripts setup",
    "shadcn": "pnpm --filter web run shadcn && pnpm -w format",
    "test": "vitest",
    "turbo:gen": "turbo gen",
    "update:deps": "pnpm update --recursive --interactive --latest"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:dev",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@raypx/scripts": "workspace:*",
    "@turbo/gen": "^2.5.8",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "^3.2.4",
    "consola": "^3.4.2",
    "knip": "^5.64.1",
    "lefthook": "catalog:dev",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "catalog:dev",
    "ultracite": "catalog:dev",
    "dotenv-cli": "^10.0.0",
    "vite": "catalog:",
    "vitest": "catalog:",
    "zod": "catalog:"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10.0.0"
  }
}
