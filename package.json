{
  "name": "raypx",
  "version": "0.0.0",
  "private": true,
  "description": "A modern web application built with Next.js and TypeScript",
  "homepage": "https://raypx.com",
  "bugs": {
    "url": "https://github.com/raypx/raypx/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raypx/raypx.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Raypx",
    "email": "support@raypx.com"
  },
  "scripts": {
    "audit": "pnpm audit",
    "build": "turbo build",
    "changeset": "changeset",
    "check": "biome check",
    "clean": "raypx-scripts clean",
    "coverage": "vitest --coverage",
    "dedupe": "pnpm dedupe",
    "dev": "turbo dev",
    "format": "raypx-scripts format",
    "typecheck": "turbo typecheck --affected --cache-dir=.turbo",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "raypx-scripts postinstall",
    "setup": "raypx-scripts setup",
    "shadcn": "pnpm --filter @raypx/web run shadcn && pnpm -w format",
    "test": "vitest",
    "test:e2e": "pnpm --filter @raypx/e2e run test",
    "test:e2e:ui": "pnpm --filter @raypx/e2e run test:ui",
    "test:e2e:headed": "pnpm --filter @raypx/e2e run test:headed",
    "test:e2e:report": "pnpm --filter @raypx/e2e run report",
    "dev-tool": "pnpm --filter @raypx/dev-tool run dev",
    "turbo:gen": "turbo gen",
    "update:deps": "pnpm update --recursive --interactive --latest"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:dev",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@raypx/scripts": "workspace:*",
    "@turbo/gen": "^2.5.8",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "^3.2.4",
    "rimraf": "^6.0.1",
    "ultracite": "catalog:dev",
    "lefthook": "catalog:dev",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "consola": "^3.4.2",
    "typescript": "catalog:dev",
    "vite": "catalog:",
    "vitest": "catalog:",
    "zod": "catalog:"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10.0.0"
  }
}
