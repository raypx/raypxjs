  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/.source": ["./.source/index.ts"],
      "@/*": ["./*"],
      "@raypx/ui/*": ["../../packages/ui/src/*"],
      "@auth/*": ["../../packages/auth/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
