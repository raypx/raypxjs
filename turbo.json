{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "loose",
  "globalDependencies": ["**/.env.*local", ".env.example"],
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env",
        "next.config.*",
        "tailwind.config.*",
        "postcss.config.*"
      ],
      "outputs": ["dist/**", ".output/**", ".vercel/*", ".next/**"]
    },
    "typecheck": {
      "cache": true
    },
    "dev": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env", "**/*.env.*"],
      "persistent": true
    },
    "generate": {
      "cache": true,
      "outputLogs": "new-only",
      "outputs": ["generated/**", "**/*.generated.*"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "vitest.config.*",
        "jest.config.*",
        "**/*.test.*",
        "**/*.spec.*"
      ],
      "outputs": ["coverage/**", "test-results/**"]
    }
  },
  "ui": "stream"
}
